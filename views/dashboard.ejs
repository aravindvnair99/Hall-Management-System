                    <br>
                    <b>Requirements:</b> <%= events_data[i].req %>
                    <br>
                    <b>Details:</b> <%= events_data[i].details %>
                    <br>
                    <b>Status:</b> <% if (booking_data[i].status_id == 1) { %>
                        Approved
                        <% } else if (booking_data[i].status_id == 3) { %>  
                            Pending
                        <% } else if (booking_data[i].status_id == 2) { %>  
                            Rejected
                        <% } else { %>  
                            Unknown
                        <% } %>
                </div>
                <div class="modal-footer">
                  <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
                  <a href="#!" class="modal-close waves-effect waves-green btn-flat">Disagree</a>
                  <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
                </div>
              </div>
