    <div class="row">
    <% for(var i=(booking_data.length-1); i>=0; i--) {%>
            <div class="col s12 m6 l3">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title" href="#modal"><%= events_data[i].title %></span>
