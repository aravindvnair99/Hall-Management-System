                                        <td id="9a"></td>
                                    </tr>
                                    <tr>
                                        <td style="background-color: rgb(57, 0, 214); color: #FFFFFF">Sudhamani Hall</td>
                                        <td id="1s"></td>
                                        <td id="2s"></td>
                                        <td id="3s"></td>
                                        <td id="4s"></td>
                                        <td id="5s"></td>
                                        <td id="6s"></td>
                                        <td id="7s"></td>
                                        <td id="8s"></td>
                                        <td id="9s"></td>
                                    </tr>
                                    <tr>
                                        <td style="background-color: rgb(57, 0, 214); color: #FFFFFF">Rama Hall</td>
                                        <td id="1r"></td>
                                        <td id="2r"></td>
                                        <td id="3r"></td>
                                        <td id="4r"></td>
